<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/detallesstyles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Document</title>
</head>
<body>
    <section class="section-detalles">
        <article class="imagen">
            <div class="contenedorimagen">
                <img src="/img/jean-celeste.jpg">
            </div>
        </article>
        <article class="detalles">
            <div class="nombrePrecio">
                <h1>New Jean Man. Young Style. </h1><br>
                <p class="precio">Precio: $ 20.000</p>
            </div>
            <div class="divbutton">
                <button class="buttonfav"><i class="fa-regular fa-heart"></i></button>
            </div>

         <div class="cajaCompras">
                <div class="caracteristicas">
    
                    <div class="especificidad">
                        <h2>talle</h2>    
                        <select id="talle">
                        <option value="38">38</option>
                        <option value="40">40</option>
                        <option value="42">42</option>
                        <option value="44">44</option>
                        </select>
                
                    <p>Has seleccionado: <span id="resultadotalle"></span></p>
                
                    <script>
                        const selectTalle = document.getElementById('talle');
                        const resultadotalle = document.getElementById('resultadotalle');
                
                        selectTalle.addEventListener('change', () => {
                            resultadotalle.textContent = selectTalle.value;
                        });
                    </script>
                </div>
                    <div class="especificidad">
                        <h2>color</h2>
                        <select id="color">
                            <option value="celeste">Celeste</option>
                            <option value="blanco">Blanco</option>
                            <option value="negro">Negro</option>
                        </select>
                    
                        <p>Has seleccionado: <span id="resultadocolor"></span></p>
                    
                        <script>
                            const selectcolor = document.getElementById('color');
                            const resultadocolor = document.getElementById('resultadocolor');
                    
                            selectcolor.addEventListener('change', () => {
                                resultadocolor.textContent = selectcolor.value;
                            });
                        </script>
                    
                    </div>
                    <div class="especificidad">
                        <h2>cantidad</h2>
                        <select id="cantidad">
                            <option value="1 (uno)">1</option>
                            <option value="2 (dos)">2</option>
                            <option value="3 (tres)">3</option>
                            <option value="4 (cuatro)">4</option>
                            <option value="5 (cinco)">5</option>
                            <option value="6 (seis)">6</option>
                            <option value="7 (siete)">7</option>
                        </select>
                    
                        <p>Has seleccionado: <span id="resultadocantidad"></span></p>
                    
                        <script>
                            const selectcantidad = document.getElementById('cantidad');
                            const resultadocantidad = document.getElementById('resultadocantidad');
                    
                            selectcantidad.addEventListener('change', () => {
                                resultadocantidad.textContent = selectcantidad.value;
                            });
                        </script>
                    
                    </div>
    
                </div>
                
                <div class="buttondivcompras">
                    <div class="botones">
                        <button type="button" class="buttoncarrito">AGREGAR AL CARRITO</button> 
                    </div>
                    <div class="botones">
                        <button type="button" class="buttoncompra">COMPRAR AHORA</button>
                    </div>
                </div>

        </div>



        </article>
    </section>
</body>
</html>